<html>
  <head>
    <title>Image Gallery</title>
    <script src="/javascript/jquery.min.js" type="text/javascript"></script>
    <script src="/javascript/jquery.tmpl.js" type="text/javascript"></script>
    <script src="/javascript/underscore.js" type="text/javascript"></script>
    <script src="/javascript/json2.js" type="text/javascript"></script>
    <script src="/javascript/backbone.js" type="text/javascript"></script>
    <script src="/javascript/backbone.modelbinding.js" type="text/javascript"></script>
    <script src="/javascript/backbone.memento.js" type="text/javascript"></script>
    <script src="/javascript/imagegallery.js" type="text/javascript"></script>
    <link rel='stylesheet' href='/css/imagegallery.css' type='text/css'>
    <script id="load-image-form-template" type="text/x-jquery-tmpl">
      <h1>Load Image</h1>
      <ul>
        <li>
          <label for="image-url">Image Url: </label>
          <input type="text" id="url">
        </li>
        <li>
          <label for="preview">Preview: </label>
          <div id="image-preview">
            <img id="preview" data-bind="src url; displayed url">
          </div>
        </li>
        <li>
          <label for="name">Image Name: </label>
          <input type="text" id="name">
        </li>
        <li>
          <label for="description">Description: </label>
          <textarea id="description"></textarea>
        </li>
        <li class="save-cancel">
          <a href="#" id="cancel">cancel</a>
          <button id="save">Save</button>
        </li>
      </ul>
    </script>
    <%= erb :"edit-image-template" %>
    <script id="image-preview-template" type="text/x-jquery-tmpl">
      <a href="#">
        <img src="${url}" width="150" height="100" alt="${description}" data-bind="class selected; alt description">
        <span class="image-label" data-bind="text name">${name}</span>
      </a>
    </script>
    <%= erb :"image-view-template" %>
    <%= erb :"image-comments-template" %>
    <%= erb :"add-comment-template" %>
    <%= erb :"comment-template" %>
    <script id="image-not-found-template" type="text/x-jquery-tmpl">
      <h2>Image With Id '${modelId}' Was Not Found</h2>
    </script>

    <script language="javascript">
      $(function(){
      });
    </script>

  </head>
  <body>
    <div id="container">
      <div id="header">
        <ul id="menu">
          <li><a href="#" id="add-image">Add Image</a>
        </ul>
      </div>
      <div id="main"><%= yield %></div>
      <div id="sidebar">
        <div id="image-list"></div>
      </div>
      <div id="footer">Copyright Â©2011 <a href="http://www.pragprog.om">The Pragmatic Programmers</a>. Reproduced With Permission.</div>
    </div>
  </body>
</html>
